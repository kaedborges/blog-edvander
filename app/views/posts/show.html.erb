<div class="shadow p-5 bg-body rounded">
  <div class="text-center mb-5">
    <h1><%= @post.title %></h1>

    <p class="text-muted">
      <strong>Por <%= @post.author %></strong><br>
      <%= l @post.created_at, format: :long %>
    </p>
  </div>

  <div class="px-5">
    <%= @post.body.gsub("\n", "<br>").html_safe %>
  </div>
</div>

<div class="m-5">
  <div class="text-center">
    <h4>
      <%= pluralize(@post.comments.count,'Comentario') %>
      <% if @post.comments.none? %>
        <span class="badge bg-success">Seja o primeiro a comentar!</span>
      <% end %>
    </h4>
  </div>

  <%= form_with(model: @comment, local: true) do |form|%>
    <%= form.hidden_field :post_id, value: @post.id %>
    <div class="form-group">
      <%= form.label :author,"Autor", style: "display: block" %>
      <%= form.text_field :author, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :body, "ComentÃ¡rio", style: "display: block" %>
      <%= form.text_area :body, class: "form-control", rows: 3 %>
    </div>

    <%= form.submit "Comentar", class: 'btn btn-primary mt-2', data: { disable_with: 'Crianda...'}%>
  <% end %>
</div>
